@import 'nib'

*
  font-family 'Neucha', cursive

body
  margin 0
  .logo
    display flex
    flex-flow row nowrap
    justify-content center
    align-items center
    .logoPicture
      -webkit-transform-origin center center
      transform-origin center center
      -webkit-animation Shake
      -webkit-animation-duration: 3s
      -webkit-animation-iteration-count infinite
      animation Shake 3s infinite
  .navigation
    display flex
    flex-flow row nowrap
    justify-content space-around
    align-items center
    width 100%
    height 60px
    color: #000
    font-size xx-large
    a
      transition: box-shadow 0.3s ease-in-out;
      border 5px solid bisque
      border-radius 50%
      padding 10px
      background #ef9d56
      box-shadow: 3px 4px 28px 0px rgba(0,0,0,0.75)
      text-decoration none
      color #f9f6f1

  .footer
    position fixed
    width 100%
    bottom 0px
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items center
    background rgba(147, 77, 0, 0.28)
    h4
      margin 0px
    .instagram img, .vk img
      width 40px
      height 40px



.navigation a:hover
  -webkit-transform-origin center center
  transform-origin center center
  -webkit-animation Shake
  -webkit-animation-duration: 1s
  -webkit-animation-iteration-count infinite
  box-shadow: 3px 4px 28px 10px rgba(0,0,0,0.75)
  animation Shake 1s infinite





@-webkit-keyframes Shake {
    0%, 100% {transform: rotate(0deg);}
    55% {-webkit-transform: rotate(0deg);}
    68% {-webkit-transform: rotate(.5deg);}
    70% {-webkit-transform: rotate(-.5deg);}
    72% {-webkit-transform: rotate(1deg);}
    74% {-webkit-transform: rotate(-2deg);}
    76% {-webkit-transform: rotate(3deg);}
    78% {-webkit-transform: rotate(-3deg);}
    80% {-webkit-transform: rotate(1deg);}
    82% {-webkit-transform: rotate(-1deg);}
    85% {-webkit-transform: rotate(.5deg);}
  }
  @keyframes Shake {
    0%, 100% {transform: rotate(0deg);}
    55% {transform: rotate(0deg);}
    68% {transform: rotate(.5deg);}
    70% {transform: rotate(-.5deg);}
    72% {transform: rotate(1deg);}
    74% {transform: rotate(-2deg);}
    76% {transform: rotate(3deg);}
    78% {transform: rotate(-3deg);}
    80% {transform: rotate(1deg);}
    82% {transform: rotate(-1deg);}
    85% {transform: rotate(.5deg);}
  }